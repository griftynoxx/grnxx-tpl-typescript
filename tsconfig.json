{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "esModuleInterop": false,
    "target": "es2017",
    "noImplicitAny": true,       
    "outDir": "dist",
    "baseUrl": ".",
    "alwaysStrict": true,
    "paths": {
      "*": ["node_modules/", "src/types/*"]
    }
  },
  "include": ["src/app/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/test/**/**.ts"
  ]
}